<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Add_Post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_8sdp"
            android:backgroundTint="#00FFFFFF"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/arrow"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/txt_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Add Post"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_8sdp"
            android:backgroundTint="#00FFFFFF"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/arrow"
            android:visibility="invisible"
            app:tint="@color/blue" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/p_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:onClick="ChooseImage"
                android:src="@drawable/image"
                app:tint="@color/blue" />
        </androidx.cardview.widget.CardView>

    </FrameLayout>


    <EditText
        android:id="@+id/p_caption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_30sdp"
        android:background="@drawable/bg_circlebutton"
        android:backgroundTint="#2D3C5C83"
        android:focusable="true"
        android:gravity="center|start|top"
        android:textCursorDrawable="@drawable/color_cursor"
        android:hint="Write your caption here!"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />


    <TextView
        android:id="@+id/btn_addpost"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circlebutton"
        android:gravity="center"
        android:text="Add post"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />


</LinearLayout>